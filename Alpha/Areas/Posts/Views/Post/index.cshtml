@{
    if (Request.Headers["X-PJAX"] != null)
    {
        Layout = "~/Views/Shared/_PjaxLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_View.cshtml";
    }
}
<ul id="leftmenu" class="list-group" style="margin:0px;">
    <li class="list-group-item active list-group-edit menuleftx" style="padding:10px; padding-left:20px; border-radius:0px;">
        <a href="/posts/post/index?type=feed" class="menu" data-menu="x">
            <i class="fa fa-address-book fa-2" aria-hidden="true"></i> Feed
        </a>
    </li>
    <li class="list-group-item list-group-edit menuleftx" style="padding:10px; padding-left:20px; border-radius:0px;">
        <a href="/posts/post/index?type=ask" class="menu" data-menu="x">
            <i class="fa fa-question fa-2" aria-hidden="true"></i> Asks
        </a>
    </li>
    <li class="list-group-item list-group-edit menuleftx" style="padding:10px; padding-left:20px; border-radius:0px;">
        <a href="/posts/post/index?type=answers" class="menu" data-menu="y">
            <i class="fa fa-reply fa-2" aria-hidden="true"></i> Answers
        </a>
    </li>
</ul>

@{Html.RenderPartial("post/_Posts"); }

<link href="~/Asserts/ts/posts/postwall.css" rel="stylesheet" />
@section scripts{
    <script src="~/Asserts/ts/posts/postRoute.js"></script>
    <script src="~/Asserts/ts/posts/postViewModel.js"></script>
    <script src="~/Asserts/ts/posts/post.js"></script>
}

