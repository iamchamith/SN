@*Ask Questions*@
<div class="modal fade" id="model-askQuestion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="exampleModalLabel">Ask anything</h4>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#home">Ask</a></li>
                    <li><a data-toggle="tab" href="#menu1">Share Status</a></li>
                </ul>

                <div class="tab-content">
                    <div id="home" class="tab-pane fade in active">
                        <br />
                        <form>
                            <div class="form-group">
                                <label for="recipient-name" class="control-label">Topic:</label>
                                <input type="text" class="form-control" data-bind="value:Titile" placeholder="Type and share anything">
                            </div>
                            <div class="form-group">
                                <label for="message-text" class="control-label">Someting more:</label>
                                <textarea class="form-control" data-bind="value:Description" placeholder="Do you have any more?"></textarea>
                            </div>
                            <div class="form-group">
                                <select data-role="multiselect"
                                        data-placeholder="Type a interesting e.g. 'rice'"
                                        data-value-primitive="true"
                                        data-text-field="TagName"
                                        data-value-field="TagId"
                                        data-bind="value: Tag,source: Tagss "></select>
                            </div>
                            <div class="form-group">
                                <input type="checkbox" data-bind="checked: IsAnonymas" /> as Anonymas
                            </div>
                        </form>
                    </div>
                    <div id="menu1" class="tab-pane fade">
                        <h3>Share status</h3>
                        <p>Some content in menu 1.</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click:ask">Share</button>
            </div>
        </div>
    </div>
</div>
